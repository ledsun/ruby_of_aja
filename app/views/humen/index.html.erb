<p id="notice"><%= notice %></p>

<h1>Humen</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Order</th>
      <th>Aim</th>
      <th>Problem</th>
      <th>Solution</th>
      <th>Expected time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @humen.each do |human| %>
      <tr>
        <td><%= link_to human.category.name, human.category %></td>
        <td><%= human.order %></td>
        <td><%= human.aim_html.html_safe %></td>
        <td><%= human.problem_html.html_safe %></td>
        <td><%= human.solution_html.html_safe %></td>
        <td><%= human.expected_time %></td>
        <td><%= link_to 'Show', human %></td>
        <td><%= link_to 'Edit', edit_human_path(human) %></td>
        <td><%= link_to 'Destroy', human, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

